<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="chatCardHBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SingleChatCardFXMLController">
   <children>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: white;">
         <children>
            <HBox fx:id="nameHBox" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="10.0" spacing="20.0">
               <children>
                  <Label fx:id="nameLabel" maxWidth="1.7976931348623157E308" prefHeight="22.0" text="Name" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold Italic" size="20.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                  <Label fx:id="timestampLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="15.0" text="Timestamp" wrapText="true" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Italic" size="20.0" />
                     </font>
                     <padding>
                        <Insets right="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <Separator maxWidth="1.7976931348623157E308" />
            <Label fx:id="messageLabel" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308" maxWidth="599.0" text="Message" wrapText="true">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <effect>
            <DropShadow blurType="TWO_PASS_BOX" color="#d3cece" height="33.72" radius="16.36" spread="0.25" width="33.72" />
         </effect>
         <HBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
